@model IEnumerable<Entidades.Alumnos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<CENTER>
    <h1>LISTA DE ALUMNOS </h1>


    <p>
        @Html.ActionLink("AÑADIR ALUMNO NUEVO", "Create", "Alumnos", null, new { @class = "enlace-personalizado" })

    </p>
</CENTER>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.primerApellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.segundoApellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.curp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sueldo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estados.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstatusAlumnos.Nombre)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.segundoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.curp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sueldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estados.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstatusAlumnos.Nombre)
            </td>
            <td>
               <td>  @Html.ActionLink("EDITAR", "Edit", new { id = item.id })      
                     @Html.ActionLink("DETALLES", "Details", new { id = item.id }) 
                     @Html.ActionLink("ELIMINAR", "Delete", new { id = item.id })  
               </td> 
 
        </tr>
    }

</table>





<style>
    /* Estilo para h1 */
    h1 {
        background-color: #66fc10; /* Fondo naranja */
        color: #FFFFFF; /* Texto blanco */
        text-shadow: 2px 2px 4px #333; /* Sombra de texto */
        padding: 10px; /* Espaciado interno */
        font-family: Arial, sans-serif; /* Fuente */
        font-size: 32px; /* Tamaño del texto */
    }

    /* Estilo para h2 */
    h2 {
        background-color: #0125f3; /* Fondo azul */
        color: #FFFFFF; /* Texto blanco */
        text-shadow: 2px 2px 4px #333; /* Sombra de texto */
        padding: 8px; /* Espaciado interno */
        font-family: Georgia, serif; /* Fuente */
        font-size: 24px; /* Tamaño del texto */
    }

    /* Estilo para h3 */
    h3 {
        background-color: #ff0a0a; /* Fondo verde */
        color: #FFFFFF; /* Texto blanco */
        text-shadow: 2px 2px 4px #333; /* Sombra de texto */
        padding: 6px; /* Espaciado interno */
        font-family: "Times New Roman", serif; /* Fuente */
        font-size: 20px; /* Tamaño del texto */
    }
</style>





<style>
    table {
        width: 100%; /* Ancho de la tabla al 100% del contenedor */
        border-collapse: collapse; /* Borra los espacios entre las celdas */
        margin-bottom: 20px; /* Espacio inferior para separar tablas */
    }

    th, td {
        border: 1px solid #ccc; /* Borde de 1 píxel sólido en celdas y encabezados */
        padding: 8px; /* Espaciado interno en celdas */
        text-align: center; /* Alineación central del texto */
    }

    th {
        background-color: #66fc10; /* Fondo gris oscuro para encabezados */
        color: black; /* Texto blanco para encabezados */
    }

    tr:nth-child(even) {
        background-color: #9bf884; /* Fondo gris claro para filas pares */
    }

    tr:hover {
        background-color: #ff0000; /* Cambia el fondo al pasar el mouse */
    }
</style>


<style>
    /* Estilo para el enlace personalizado */
    .enlace-personalizado {
        color: #0015d6; /* Color del texto del enlace */
        text-decoration: none; /* Elimina la subraya predeterminada */
        font-weight: bold; /* Texto en negrita */
    }

        /* Estilo para el enlace personalizado al pasar el mouse */
        .enlace-personalizado:hover {
            color: #1bff06; /* Cambia el color al pasar el mouse */
        }
</style>

