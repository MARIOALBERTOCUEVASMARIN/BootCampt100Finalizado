<script type="text/javascript">
    function IMSS() {
        var id = @Html.DisplayFor(model => model.id);
        $("#modallabel").text("Calculo del IMSS");
        var url = "@Url.Action("_AportacionesIMSS", "Alumnos")" + "/" + id;
        llamadoAjaxGEThtml(url, funcexito);
    }

    function ISR() {
        var id = @Html.DisplayFor(model => model.id);
        $("#modallabel").text("Calculo del ISR");
        var url = "@Url.Action("_TablaISR", "Alumnos")" + "/" + id;
        llamadoAjaxGEThtml(url, funcexito);
    }

    function funcexito(data) {
        $("#contenidoModal").html(data);
        $("#modal").modal("show");
    }
</script>

